{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "jsx": "react", // This is crucial for React components
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build"]
}
